<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ver concesionarias -->
    <Button
        android:id="@+id/btnVerConcesionarias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Concesionarias"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para crear concesionaria -->
    <Button
        android:id="@+id/btnCrearConcesionaria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear Concesionaria"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerConcesionarias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ver autos de una concesionaria -->
    <Button
        android:id="@+id/btnVerAutos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Autos de una Concesionaria"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrearConcesionaria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para crear auto -->
    <Button
        android:id="@+id/btnCrearAuto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear Auto en una Concesionaria"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerAutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
