<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".CrearConcesionariaActivity">

    <!-- EditText para el nombre de la concesionaria -->
    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la concesionaria"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- EditText para la dirección -->
    <EditText
        android:id="@+id/edtDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/edtNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- EditText para la fecha de fundación -->
    <EditText
        android:id="@+id/edtFechaFundacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Fundación (YYYY-MM-DD)"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/edtDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- EditText para saber si está abierta -->
    <EditText
        android:id="@+id/edtAbierta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="¿Está abierta? (true/false)"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/edtFechaFundacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Botón para crear la concesionaria -->
    <Button
        android:id="@+id/btnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Concesionaria"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/edtAbierta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
